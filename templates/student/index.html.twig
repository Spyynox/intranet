{% extends 'base.html.twig' %}

{% block title %}Matter index{% endblock %}

{% block body %}

    <a href="{{ path('student_user_new') }}" class="btn new">S'inscrire à une matière</a>

    <div class="flex">
        <div class="center">
            <h2>Liste des matières disponible</h2>
            {% for matter in matters %}
                <div>{{ matter.name }}</div>
            {% endfor %}
        </div>
        <div class="center">
            <h2>Liste des matières inscrit</h2>
            {% for studentUser in studentUsers %}
            
                {% if studentUser.user.id == app.user.id %}
                    <div>{{ studentUser.studentMatter.name }}</div>
                {% endif %}
                
            {% endfor %}

        </div>
    </div>
{% endblock %}
