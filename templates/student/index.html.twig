{% extends 'base.html.twig' %}

{% block title %}Matter index{% endblock %}

{% block body %}
    <h1>Matter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matter in matters %}
            <tr>
                <td>{{ matter.id }}</td>
                <td>{{ matter.name }}</td>
                <td>
                    <a href="{{ path('student_edit', {'id': matter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('student_user_new') }}">Create new</a>

    <div class="flex">
        <div>
            <h2>Liste des matières disponible</h2>
            {% for matter in matters %}
                <div>{{ matter.name }}</div>
            {% endfor %}
        </div>
        <div>
            <h2>Liste des matières inscrit</h2>
            {% for studentUser in studentUsers %}
            
                {% if studentUser.user.id == app.user.id %}
                    <div>{{ studentUser.studentMatter.name }}</div>
                {% endif %}
                
            {% endfor %}

        </div>
    </div>
{% endblock %}
