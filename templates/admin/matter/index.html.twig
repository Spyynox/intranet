{% extends 'base.html.twig' %}

{% block title %}Matter index{% endblock %}

{% block body %}
    <h1>Matter index</h1>

    <a href="{{ path('admin_new') }}" class="btn new">Create new</a>

        {% set count = 0 %}
        {% for matter in matters %}
            {% set count = count + 1 %}
        {% endfor %}

    <h2 class="center">Liste de toute les matières ({{ count }} matiere(s))</h2>

    <table class="table">
        <thead>
            <tr class="center">
                <th>Matières</th>
			    <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matter in matters %}
            <tr class="center">
                <td>{{ matter.name }}</td>
				<td>
					<a href="{{ path('admin_edit', {'id': matter.id}) }}">modifier</a> / 
                    {{ include('admin/matter/_delete_form.html.twig') }}
				</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Il n'y a pas de matière</td>
            </tr>
        {% endfor %}
        </tbody>
</table>


    <div class="flex">
        <div>
            <h2>Liste de vos matières assignés</h2>
            {% for matter in matters %}

                {% if matter.user.id == app.user.id %}
                    <div>{{ matter.name }}</div>
                {% endif %}
                
            {% endfor %}
        </div>
        <div>
            <h2>Liste de tous les élèves inscrits</h2>
            {% for studentUser in studentUsers %}
                {% if studentUser.studentMatter.user.id == app.user.id %}
                    <div>{{ studentUser.user.fullname }}</div>
                {% endif %}
                
            {% endfor %}
        </div>
    </div>

    <br>
    <br>
    <br>

    {% for matter in matters %}
        {% if matter.user.id == app.user.id %}
                <div style="text-align: center">Cours de {{ matter.name }} : </div><br>
        {% endif %}
    {% for studentUser in studentUsers %}
        {% if matter.user.fullname == app.user.fullname %}
        {% if studentUser.studentMatter.id == matter.id %}
        
        
            <div style="text-align: center">
                <div>{{studentUser.user.fullname}} </div>
            </div>

        {% endif %}
        {% endif %}
    {% endfor %}<br>
    {% endfor %}
{% endblock %}
