{% extends 'base.html.twig' %}

{% block title %}Matter index{% endblock %}

{% block body %}
    <h1>Matter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matter in matters %}
            <tr>
                <td>{{ matter.id }}</td>
                <td>{{ matter.name }}</td>
                <td>
                    <a href="{{ path('matter_show', {'id': matter.id}) }}">show</a>
                    <a href="{{ path('matter_edit', {'id': matter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('matter_new') }}">Create new</a>

    <div class="flex">
        <div>
            <h2>Liste de vos matières assignés</h2>
            {% for matter in matters %}

                {% if matter.user.id == app.user.id %}
                    <div>{{ matter.name }}</div>
                {% endif %}
                
            {% endfor %}
        </div>
        <div>
            <h2>Liste d'élève(s) inscrit(s)</h2>
            {% for matter in matters %}
                {# {% if matter.user.id == matter.id  %} #}
                    <div>{{ matter.student|join(', ') }}</div>
                {# {% endif %} #}
            {% endfor %}
        </div>
    </div>
{% endblock %}
