{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% if not app.user %}
        <h1>Inscription</h1>
        <div class="mb-0">
            {{ form_start(registrationForm) }}
                Nom complet: {{ form_widget(registrationForm.fullname) }}
                Email: {{ form_widget(registrationForm.email) }}
                Mot de passe{{ form_widget(registrationForm.plainPassword) }}
                Acceptez les conditions{{ form_widget(registrationForm.agreeTerms) }}

                <button class="btn btn-success">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    {% endif %}

    {% if app.user %}
        <h1>Tu es déjà connectez !</h1>
    {% endif %}
{% endblock %}
